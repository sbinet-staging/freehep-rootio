<project>
  <parent>
    <artifactId>hepio</artifactId>
    <groupId>org.freehep</groupId>
    <version>2.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.freehep</groupId>
  <artifactId>freehep-rootio</artifactId>
  <version>2.0-SNAPSHOT</version>
  <name>FreeHEP ROOT IO</name>
  <description>FreeHEP ROOT IO Reader and Writer</description>
  <repositories>
    <repository>
      <id>freehep-maven</id>
      <name>Maven FreeHEP</name>
      <url>http://java.freehep.org/maven2</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>bcel</groupId>
      <artifactId>bcel</artifactId>
    </dependency>
    <dependency>
      <groupId>org.freehep</groupId>
      <artifactId>jas-plotter</artifactId>
      <version>01052006</version>
    </dependency>
		<dependency>
		     <groupId>hep.testdata.root</groupId>
		     <artifactId>pawdemo</artifactId>
		     <version>1.0</version>
		     <type>root</type>
		     <scope>test</scope>
		</dependency>
  </dependencies>
  <build>
    <plugins>
	    <plugin>
	      <artifactId>maven-surefire-plugin</artifactId>
	      <configuration>
	        <systemProperties>
	          <org.freehep.testData>${settings.localRepository}/hep/testdata/root/pawdemo/1.0/pawdemo-1.0.root</org.freehep.testData>
	        </systemProperties>
	      </configuration>
	    </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <mainClass>hep.io.root.util.RootObjectBrowser</mainClass>
              <addClasspath>true</addClasspath>
            </manifest>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>